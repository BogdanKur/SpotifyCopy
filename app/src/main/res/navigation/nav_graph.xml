    android:id="@+id/nav_graph"
    app:startDestination="@id/distributionFragment">

    <fragment
        android:id="@+id/distributionFragment"
        tools:layout="@layout/fragment_distribution"
        android:name="com.example.spotifycopy.DistributionFragment">
        <action
